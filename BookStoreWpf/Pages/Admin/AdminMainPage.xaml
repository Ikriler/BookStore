<Page x:Class="BookStoreWpf.Pages.Admin.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStoreWpf.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainPage">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="0 0 20 0">
                <Button Name="GoClients" Content="Клиенты" Style="{StaticResource ResourceKey=buttonDefault}" Margin="0 0 0 20" Click="GoClients_Click"/>
                <Button Name="GoManagers" Content="Менеджеры" Style="{StaticResource ResourceKey=buttonDefault}"/>
            </StackPanel>
            <StackPanel>
                <Button Name="GoProducts" Content="Товары" Style="{StaticResource ResourceKey=buttonDefault}" Margin="0 0 0 20" Click="GoProducts_Click"/>
                <Button Name="GoOrders" Content="Заказы" Style="{StaticResource ResourceKey=buttonDefault}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
